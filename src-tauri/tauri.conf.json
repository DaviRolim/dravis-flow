{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DraVis Flow",
  "version": "0.1.0",
  "identifier": "com.dravis.flow",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "DraVis Flow",
        "width": 720,
        "height": 740,
        "resizable": true,
        "visible": false,
        "center": true
      },
      {
        "label": "widget",
        "title": "DraVis Flow Recorder",
        "url": "index.html?view=widget",
        "width": 170,
        "height": 38,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "infoPlist": "Info.plist",
      "entitlements": "Entitlements.plist"
    }
  }
}
